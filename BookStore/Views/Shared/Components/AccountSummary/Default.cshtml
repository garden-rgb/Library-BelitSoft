@using BookLibrary.Web.Models.CustomModels.ViewModel
@model OrderViewModel

<div class="btn-group"> 
    @if (User.IsInRole("librarian"))
    {
       <a asp-action="AllOrders" asp-controller="Order" style="padding:5px;color: rgba(0,0,0,.7);text-decoration: none;">
               @Model.UserId
       </a> 
    }
    else{
    <a asp-action="UserOrders" asp-controller="Order" style="padding:5px;color: rgba(0,0,0,.7);text-decoration: none;">
        @Model.UserId
    </a>
    }
    <a class="dropdown-toggle dropdown-toggle-split" style="padding-top:12px; font-size:20px;" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></a>
    <div class="dropdown-menu account-dropdown" style="padding:8px; text-align:right;font-size:16px;">
        <a class="dropdown-item" asp-action="UserOrders" asp-controller="Order">Your books <i class="fas fa-user-circle"></i></a>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" asp-action="Logout" asp-controller="Account">Log out <i class="fas fa-sign-out-alt"></i></a>
    </div>
</div>
